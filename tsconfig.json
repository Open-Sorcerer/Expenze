{
  "compilerOptions": {
    "allowJs": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react-native",
    "target": "ESNext",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "icons/*": ["./icons/*"],
      "components/*": ["./components/*"],
      "constants": ["./constants/index"],
      "hooks/*": ["./hooks/*"],
      "navigation/*": ["./navigation/*"],
      "screens/*": ["./screens/*"],
      "store/*": ["./store/*"],
      "utils/*": ["./utils/*"],
      "lib/*": ["./lib/*"],
      "theme": ["./theme/index"],
      "types/*": ["./types/*"],
    },
    "types": ["react", "react-native"]
  },
  "extends": "expo/tsconfig.base",
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "tsconfig.generated.json",
    "app.json"
  ]
}
